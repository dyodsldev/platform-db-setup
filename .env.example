# ==================================
# Database Configuration Template
# ==================================
# Copy this file to .env.dev, .env.staging, .env.prod
# and fill in actual values (those files are gitignored)

# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=healthcare_db
DB_USER=your_username
DB_PASSWORD=your_password

# Flyway Configuration
FLYWAY_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}
FLYWAY_USER=${DB_USER}
FLYWAY_PASSWORD=${DB_PASSWORD}

# Application Settings
APP_USER=healthcare_app
SCHEMA_VERSION=1.0

# Security
DB_SSL_MODE=require
DB_SSL_ROOT_CERT=/path/to/ca-certificate.crt

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/path/to/backups

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=info

# Environment Identifier
ENVIRONMENT=development  # development | staging | production